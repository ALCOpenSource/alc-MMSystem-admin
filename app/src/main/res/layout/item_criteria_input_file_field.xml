<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/criteria_file_input_item_height"
    android:layout_marginTop="@dimen/spacing_default"
    android:gravity="bottom"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/file_label"
        style="@style/regularMuktaBlack2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:autoSizeMaxTextSize="@dimen/font_small"
        android:autoSizeMinTextSize="2dp"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:gravity="bottom"
        android:lines="1"
        android:text="1." />

    <EditText
        android:id="@+id/file_name_edittext"
        style="@style/regularMuktaBlack2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/spacing_extra_small"
        android:layout_marginEnd="@dimen/spacing_extra_small"
        android:layout_weight="0.47"
        android:hint="@string/file_name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/type_file"
        style="@style/outlineTextInputLayoutDropDownFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_extra_small"
        android:layout_weight="0.25"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/file_type"
            android:inputType="text"
            android:padding="0dp"
            android:textSize="@dimen/font_extra_small" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qty_file"
        style="@style/outlineTextInputLayoutDropDownFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/file_Qty"
            android:inputType="text"
            android:textSize="@dimen/font_extra_small" />
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>