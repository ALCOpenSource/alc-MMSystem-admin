<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    app:flow_horizontalGap="10dp"
    app:flow_verticalGap="10dp"
    tools:context=".MainActivity">


    <!-- Certificates -->
    <TextView
        android:id="@+id/certificate"
        android:layout_width="91dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="59dp"
        android:fontFamily="@font/mukta"
        android:gravity="top"
        android:text="@string/certificate"
        android:textAppearance="@style/certificate"
        android:textFontWeight="700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="30sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="67dp"
        android:contentDescription="@string/left_arrows"
        app:layout_constraintEnd_toStartOf="@+id/certificate"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector" />

    <View
        android:id="@+id/view1"
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="20dp"
        android:background="@color/mms_black_10"
        android:clipToOutline="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="207dp"
        android:layout_marginBottom="18dp"
        android:contentDescription="@string/plain_white"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1"
        app:srcCompat="@drawable/frame_532"
        tools:ignore="ImageContrastCheck" />

    <!-- Approved certificates -->
    <TextView
        android:id="@+id/approved_ce"
        android:layout_width="151dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="55dp"
        android:fontFamily="@font/mukta"
        android:gravity="top"
        android:text="@string/approved_ce"
        android:textAppearance="@style/approved_ce"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1"
        app:lineHeight="27sp" />

    <!-- 287 -->
    <TextView
        android:id="@+id/some_id"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/mukta"
        android:gravity="top"
        android:lineHeight="39.89sp"
        android:text="@string/some_id"
        android:textAppearance="@style/some_id"
        android:textFontWeight="700"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="248dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/mms_pry_2"
        android:fontFamily="@font/mukta"
        android:padding="4dp"
        android:text="@string/view_text"
        android:textAllCaps="false"
        android:textFontWeight="400"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="@string/animated_pic"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/undraw_certificate_re_yadi_1" />

    <View
        android:id="@+id/view2"
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="20dp"
        android:background="@color/mms_black_10"
        android:clipToOutline="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="207dp"
        android:layout_marginBottom="18dp"
        android:contentDescription="@string/animated_pic2"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/frame_532__1_" />

    <!-- My Generated Certificates -->
    <TextView
        android:id="@+id/my_generate"
        android:layout_width="183dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="55dp"
        android:fontFamily="@font/mukta"
        android:gravity="top"
        android:lineHeight="26.59sp"
        android:text="@string/my_generate"
        android:textAppearance="@style/my_generate"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <!-- 160 -->
    <TextView
        android:id="@+id/some_id2"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/mukta"
        android:gravity="top"
        android:lineHeight="39.89sp"
        android:text="@string/some_id2"
        android:textAppearance="@style/some_id2"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="248dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/mms_pry_2"
        android:fontFamily="@font/mukta"
        android:padding="4dp"
        android:text="@string/view_text"
        android:textAllCaps="false"
        android:textFontWeight="400"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <View
        android:id="@+id/view3"
        android:layout_width="320dp"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="20dp"
        android:clipToOutline="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Certificates pending approval -->
    <TextView
        android:id="@+id/certificate_approval"
        android:layout_width="197dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/mukta"
        android:gravity="top"
        android:text="@string/certificate_approval"
        android:textFontWeight="400"
        android:textAppearance="@style/certificate_approval"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toEndOf="@+id/certificate_approval"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:srcCompat="@drawable/rectangle_28" />

    <!-- 3 -->
    <TextView
        android:id="@+id/some_id3"
        android:layout_width="11dp"
        android:layout_height="13dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/mukta"
        android:gravity="top"
        android:text="@string/some_id3"
        android:textFontWeight="400"
        android:textAppearance="@style/some_id3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"

        android:layout_marginTop="660dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/mms_pry_2"
        android:fontFamily="@font/mukta"
        android:lineHeight="29.92sp"
        android:padding="10dp"
        android:text="@string/generate_new_certificate"
        android:textAllCaps="false"
        android:textFontWeight="600"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>